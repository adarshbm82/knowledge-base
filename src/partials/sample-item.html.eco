<a href="<%= @link %>" class="link-container">
    <% if @featured: %>
    <div class="row">
        <div class="col-xs-12 col-sm-4 featured-title">Featured Integration</div>
        <div class="col-xs-12 col-sm-6"></div>
    </div>
    <% end %>

    <div class="option-image <%= if @featured then 'featured-option' %>" style="background-image: url('<%= @image %>')"></div>
    <div class="option-head-text"><%= @title %></div>
    <div class="option-text"><%= @text %></div>
</a>